# TrustMed AI Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
BEDROCK_KB_ID=your_kb_id_here
BEDROCK_MODEL_ARN=meta.llama3-8b-instruct-v1:0
BEDROCK_DATA_SOURCE_ID=your_data_source_id_here

# ============================================
# Knowledge Base Configuration
# ============================================
KB_VECTOR_RESULTS=8
ENABLE_TOPIC_FILTER=false
CONTENT_PREFIX=to_upload/

# ============================================
# Reddit API Configuration
# ============================================
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TrustMedAI Health Forum Collector v1.0

# ============================================
# S3 Configuration
# ============================================
S3_BUCKET_NAME=your_s3_bucket_name
S3_KEY_PREFIX=trustmed-ai/
